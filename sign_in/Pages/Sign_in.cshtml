@page
@model Sign_inModel
@{
    ViewData["Title"] = "Sign_in";
    if (HttpContext.Request.Method == "POST")
    {


        string login = Request.Form["login"];
        string password = Request.Form["password"];
        if (Controler.CheckAccount(login, password))
        {

            <div class="container" style="text-align:center; border-radius:3px; background-color :green; width:400px;">
                <h1 style="color:white;">ACCEPT</h1>
            </div>
            Account.login = login;
            Account.active = true;


        }
        else
        {

            <div class="container" style="text-align:center; border-radius:3px; background-color :orangered; width:400px;">
                <h1 style="color:white;">ERROR</h1>
            </div>
        }

    }
}
<form action="" method="post" class="sign_border container form_sign">
    <h2 class=" h2_sign">Sign in</h2>
    <div>
        <label class="label_sign">Enter your login:</label>
        <div><input class="input_sign sign_border" type="text" name="login" id="log" value="" /></div>
    </div>

    <div>
        <label class="text-danger label_sign">Enter your password:</label>
        <div><input class="input_sign sign_border" type="password" name="password" /></div>
    </div>

    <div>
        <button type="submit" class="btn btn-success" style="margin:4px;">Enter</button>
        <a asp-page="/Registration" style="color:blue">Create new account</a>
    </div>

</form>

